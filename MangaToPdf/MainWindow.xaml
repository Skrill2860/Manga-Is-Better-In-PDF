<Window x:Class="MangaToPdf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MangaToPdf"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200">
    <Grid>
        <TextBox x:Name="PathTextBox" HorizontalAlignment="Left" Height="24" TextWrapping="Wrap" Text="C:/" VerticalAlignment="Top" Width="200" Margin="154,218,0,0"/>
        <Button x:Name="ChooseDirButton" Content="Choose directory" Margin="354,218,736,0" VerticalAlignment="Top" Width="110" Height="{ Binding ElementName=PathTextBox, Path=Height }" Background="#FFB9B9B9" Click="ChooseDirButton_Click"/>
        <Button x:Name="ConvertToPdfButton" Content="Convert to PDF" Margin="155,242,736,511" Height="31" Width="309" Click="ConvertToPdfButton_Click"/>
        <TextBox x:Name="LogTextBox" Margin="600,0,50,0" TextWrapping="Wrap" VerticalAlignment="Center" Height="582" IsReadOnly="True"/>
    </Grid>
</Window>
